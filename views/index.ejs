<!DOCTYPE html>
<html>
  <head>
    
    <!-- Required meta tags -->
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Londrina+Solid:wght@300&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
  
  </head>
  <body>
    
    <%- include('header'); %>


    <div class="home">

      <div class="row">


        <!-- Sign In Area -->
        <div class="col-12 col-sm-6 text-center">

          <div class="formArea">

            <h4 class="titleForm">Sign In :</h4>

            <form action="/sign-in" method="POST">
              <div class="form-group">
                <label></label>
                <input name="emailFromFront" type="email" class="form-control" placeholder="Email">
              </div>
              <div class="form-group">
                <label></label>
                <input name="passwordFromFront" type="password" class="form-control" placeholder="Password">
              </div>

              <button type="submit" class="btn btn-danger mt-3">Confirm</button>
            </form>

          </div>

        </div>


        <!-- Sign Up Area -->
        <div class="col-12 col-sm-6 text-center">

          <div class="formArea">
            <h4 class="titleForm">Sign Up :</h4>

            <form action="/sign-up" method="POST">
              <div class="form-group">
                <label></label>
                <input name="nameFromFront" type="text" class="form-control" placeholder="Name">
              </div>
              <div class="form-group">
                <label></label>
                <input name="firstNameFromFront" type="text" class="form-control" placeholder="FirstName">
              </div>
              <div class="form-group">
                <label></label>
                <input name="emailFromFront" type="email" class="form-control" placeholder="Email">
              </div>
              <div class="form-group">
                <label></label>
                <input name="passwordFromFront" type="password" class="form-control"  placeholder="Password">
              </div>
              
              <button type="submit" class="btn btn-danger mt-3">Confirm</button>
            </form>
          </div>
        </div>


      </div>
    </div>

  
    <!-- Bootstrap CSS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
  </body>

</html>
