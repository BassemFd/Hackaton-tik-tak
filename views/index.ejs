<!DOCTYPE html>
<html>
  <head>
    
    <!-- Required meta tags -->
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Londrina+Solid:wght@300&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
  
  </head>
  <body>
    
    <header class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm fixed-top">
      <p class="h5 my-0 me-md-auto fw-normal londrina"> <img class="batman" src="../images/batman.svg" alt="">Ticketac</p>
      <nav class="my-2 my-md-0 me-md-3"></nav>
    </header>


    <div class="home">

      <div class="row">


        <!-- Sign In Area -->
        <div class="col-12 col-sm-6 text-center">

          <div class="formArea">

            <h4 class="titleForm">Sign In :</h4>

            <form action="/users/sign-in" method="POST">
              <div class="form-group">
                
                <input name="emailFromFront" type="email" class="form-control" placeholder="Email" required>
              </div>
              <div class="form-group">
                <br>
                <input name="passwordFromFront" type="password" class="form-control" placeholder="Password" required>
              </div>

              <button id="BT" type="submit" class="btn btn-danger mt-3" onclick="promptPassword()">Confirm</button>
            </form>

          </div>

        </div>


        <!-- Sign Up Area -->
        <div class="col-12 col-sm-6 text-center ">

          <div class="formArea">
            <h4 class="titleForm">Sign Up :</h4>

            <form action="/users/sign-up" class="mb-3" method="POST">
              <div class="form-group">
                
                <input name="nameFromFront" type="text" class="form-control" placeholder="Name" required>
                <br>
              </div>
              <div class="form-group">
                
                <input name="firstnameFromFront" type="text" class="form-control" placeholder="FirstName" required>
                <br>
              </div>
              <div class="form-group">
                
                <input name="emailFromFront" type="email" class="form-control" placeholder="Email" required>
                <br>
              </div>
              <div class="form-group">
                
                <input name="passwordFromFront" type="password" class="form-control"  placeholder="Password" required>
              </div>
              
              <input type="submit" class="btn btn-danger mt-3" value="Confirm">
            </form>
          </div>
        </div>

      </div>
    </div>


  
    <!-- Bootstrap CSS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
  </body>

</html>
